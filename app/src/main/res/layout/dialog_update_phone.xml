<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >

    <EditText
        android:id="@+id/et_dialog_upn_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:hint="手机号"
        android:textColor="#666"
        />

    <EditText
        android:id="@+id/et_dialog_upn_smscode"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_dialog_upn_phone"
        android:textSize="16dp"
        android:hint="请输入验证码"
        android:textColor="#666"
        />

    <Button
        android:id="@+id/btn_dialog_upn_sms"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="获取验证码"
        android:layout_alignBottom="@id/et_dialog_upn_smscode"
        android:layout_alignRight="@id/et_dialog_upn_smscode"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="getSmsCode"
        />

</RelativeLayout>