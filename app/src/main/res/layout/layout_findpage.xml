<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGray"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_find_send"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:background="@drawable/bg_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="clickFindItem"
        android:paddingLeft="15dp"
        android:text="直播"
        android:textSize="16dp" />

    <include layout="@layout/segment_thin" />

    <TextView
        android:id="@+id/tv_find_travels"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:background="@drawable/bg_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="clickFindItem"
        android:paddingLeft="15dp"
        android:text="游记"
        android:textSize="16dp" />

    <include layout="@layout/segment_thin" />

    <TextView
        android:id="@+id/tv_find_scan"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:background="@drawable/bg_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="clickFindItem"
        android:paddingLeft="15dp"
        android:text="扫一扫"
        android:textSize="16dp" />

    <include layout="@layout/segment_thin" />

    <TextView
        android:id="@+id/tv_find_shake"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:background="@drawable/bg_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="clickFindItem"
        android:paddingLeft="15dp"
        android:text="摇一摇"
        android:textSize="16dp" />

    <include layout="@layout/segment_thin" />


    <TextView
        android:id="@+id/tv_find_share"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/setting_item_height"
        android:background="@drawable/bg_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="clickFindItem"
        android:paddingLeft="15dp"
        android:text="好友分享"
        android:textSize="16dp" />


</LinearLayout>