<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_scene"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_margin="12dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_scene"
        android:layout_toRightOf="@id/iv_scene"
        android:text="故宫博物院"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/wanted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_scene"
        android:layout_toRightOf="@id/iv_scene"
        android:paddingBottom="8dp"
        android:text="3256人想去"
        android:textColor="@color/textGray"
        android:textSize="12dp" />

    <View
        style="@style/divider"
        android:layout_below="@id/iv_scene" />

</RelativeLayout>