<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="20dp"
    tools:context=".user.LoginActivity">

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="70dp"
        android:hint="区分大小写"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="用户名"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_login_phone"
        />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_login_phone"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:paddingLeft="70dp"
        android:hint="填写密码"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="密 码"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_login_pwd"
        />

    <Button
        android:id="@+id/btn_register_regist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/et_login_pwd"
        android:text="登  录"
        android:onClick="login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无账号，点此注册"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/btn_register_regist"
        android:layout_alignParentRight="true"
        android:onClick="register"
        android:clickable="true"
        android:background="@drawable/bg_white_gray"
        />

</RelativeLayout>
