<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="club.hanfeng.freewalk.download.DownloadActivity">

    <RelativeLayout
        android:id="@+id/map_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_setting_item"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线地图"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_map"
            android:layout_marginTop="8dp"
            android:text="下载后，没网也能搜"
            android:textColor="@color/textGray"
            android:textSize="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/voice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_setting_item"
        android:padding="12dp"
        android:text="景点语音导览"
        android:textSize="16dp" />

</RelativeLayout>
