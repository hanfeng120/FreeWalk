<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="20dp"
    tools:context="club.hanfeng.freewalk.activity.RegisterActivity">


    <EditText
        android:id="@+id/et_register_nicheng"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:paddingLeft="70dp"
        android:hint="区分大小写"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="用户名"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_register_nicheng"
        />

    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_nicheng"
        android:textSize="16dp"
        android:paddingLeft="70dp"
        android:hint="你的手机号"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="手机号"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_register_phone"
        />

    <EditText
        android:id="@+id/et_register_smscode"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_phone"
        android:textSize="16dp"
        android:paddingLeft="70dp"
        android:hint="请输入验证码"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="验证码"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_register_smscode"
        />

    <Button
        android:id="@+id/btn_register_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:layout_alignBottom="@id/et_register_smscode"
        android:layout_alignRight="@id/et_register_smscode"
        android:layout_marginBottom="5dp"
        android:onClick="getSmsCode"
        />

    <EditText
        android:id="@+id/et_register_pwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_smscode"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:paddingLeft="70dp"
        android:hint="填写密码"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="密 码"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_register_pwd"
        />

    <EditText
        android:id="@+id/et_register_cpwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_register_pwd"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:paddingLeft="90dp"
        android:hint="填写确认密码"
        android:textColor="#666"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="确认密码"
        android:textSize="16dp"
        android:layout_alignBottom="@id/et_register_cpwd"
        />

    <Button
        android:id="@+id/btn_register_regist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/et_register_cpwd"
        android:text="注  册"
        android:onClick="register"
        android:clickable="false"
        />

    <TextView
        android:id="@+id/tv_register_xy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/btn_register_regist"
        android:text="点击上面的“注册”按钮，即表示你同意《自由行软件许可及服务协议》"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号，点此登录"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/tv_register_xy"
        android:layout_alignParentRight="true"
        android:onClick="login"
        android:clickable="true"
        android:background="@drawable/bg_white_gray"
        />

</RelativeLayout>
